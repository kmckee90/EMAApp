<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/X"
        android:id="@+id/skipX"
        android:textSize="24sp"
        android:textColor="@color/darkGray"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Space
        android:layout_width="180px"
        android:layout_height="120px"
        android:id="@+id/itemCenter"
        android:layout_centerHorizontal="true" />

    <kmckee90.emaapp.phd.Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemTimer"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neg"
        android:id="@+id/itemButtonNeg"
        android:layout_toLeftOf="@+id/itemCenter"
        android:layout_toStartOf="@+id/itemCenter" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pos"
        android:id="@+id/itemButtonPos"
        android:layout_toRightOf="@+id/itemCenter"
        android:layout_toEndOf="@+id/itemCenter" />
</merge>


